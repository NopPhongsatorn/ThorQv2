    <TextView
        android:id="@+id/numsit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topRelative"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="9dp"
        android:textColor="#000"
        android:text="กรุณาใส่จำนวนที่นั่ง"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numsit"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_margin="10dp"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/minusBtn"
            android:layout_width="wrap_content"
            android:layout_height="107sp"
            android:src="@drawable/ic_remove_circle_teal_400_48dp"
            android:textSize="50sp"
            android:background="#fafafa"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/counterTxt"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="1"
            android:layout_marginTop="40dp"
            android:textSize="80sp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/plusBtn"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:background="#fafafa"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_circle_teal_400_48dp"
            android:text="+"
            android:textSize="50sp" />
    </LinearLayout>

    <Button
        android:id="@+id/reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background = "#61bb93"
        android:textColor="#FFFFFF"
        android:text="จองเลย"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
