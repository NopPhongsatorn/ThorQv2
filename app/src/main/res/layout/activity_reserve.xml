<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.advproject.phongsatorn.thorqv2.ReserveActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relLayoutTopBar"
        android:background="@drawable/white_grey_border_bottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="คิวของคุณ"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/relLayoutTopBar">

        <RelativeLayout
            android:id="@+id/relaLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/img"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="9dp"
                android:text="Title"
                android:textColor="#333"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/locaIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_below="@+id/txtTitle"
                android:layout_toRightOf="@id/img"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="9dp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/locaIcon"
                android:layout_below="@+id/txtTitle"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:text="Description"
                android:textColor="#058"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:background="@drawable/white_grey_border_top"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/waitTxt"
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รออีก (คิว) : "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txtQue"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/waitTxt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp"
                    android:text="Q" />

                <TextView
                    android:id="@+id/peopleTxt"
                    android:layout_below="@+id/waitTxt"
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จำนวนที่นั่ง : "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/counterTxt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/peopleTxt"
                    android:layout_below="@+id/txtQue"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textSize="25dp"
                    android:text="Counter" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/backHomeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background = "#61bb93"
        android:textColor="#FFFFFF"
        android:text="กลับสู่หน้าหลัก"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>
